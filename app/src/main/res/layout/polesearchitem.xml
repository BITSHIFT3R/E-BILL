<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account No"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:text="ac no"
        android:id="@+id/psacc"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/pstrans"
        android:layout_alignStart="@+id/pstrans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/psname"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/psacc"
        android:layout_alignStart="@+id/psacc"
        android:layout_alignRight="@+id/psacc"
        android:layout_alignEnd="@+id/psacc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transformer"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trans"
        android:id="@+id/pstrans"
        android:layout_alignTop="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pole Code"
        android:id="@+id/textView13"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <EditText
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:id="@+id/psetpolecode"
        android:background="@drawable/edittext_round"
        android:padding="10dip"
        android:hint="Pole Code"
        android:layout_alignTop="@+id/textView13"
        android:layout_marginTop="-5dip"
        android:layout_alignLeft="@+id/pstrans"
        android:layout_alignStart="@+id/pstrans" />

    <Button
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/psupdate"
        android:layout_above="@+id/psetpolecode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="15dip" />
</RelativeLayout>